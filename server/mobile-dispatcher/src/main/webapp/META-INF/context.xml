<?xml version='1.0' encoding='utf-8'?>
<!-- Oracle data source -->
<Context>
    <Resource name="idamobile.jdbc.datasource" auth="Container" type="javax.sql.DataSource"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"                   
		initialSize="1"
		maxActive="100"
		maxIdle="50"
		minIdle="10"
		timeBetweenEvictionRunsMillis="30000"
		minEvictableIdleTimeMillis="60000"
		testOnBorrow="true"
		validationQuery="SELECT 1 FROM DUAL"
		validationInterval="30000"
		suspectTimeout="60"
		logAbandoned="true"
		abandonWhenPercentageFull="50"
		jdbcInterceptors="ResetAbandonedTimer"
		maxWait="15000" 
		username="hc_mobile" password="idamobile" driverClassName="oracle.jdbc.driver.OracleDriver"
		url="jdbc:oracle:thin:@project.idamob.ru:1521:XE"
	/>
	<!-- 127.0.0.1:1521:ida | project.idamob.ru:1521:XE-->                
</Context>

